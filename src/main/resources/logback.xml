<configuration>
  <!-- Definir un appender (destino) para la consola -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- Codificador para definir el formato del log -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Configurar el logger raíz -->
  <root level="info">
    <!-- Asignar el appender de consola al logger raíz -->
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
